{
    "name": "Tab Switch Fix",
    "version": "1.0.0",
    "description": "Adds a the Command+Shirt+Left/Right arrow shortcut to tab switching for macOS.\n And for windows it's Ctrl+Shirt+Left/Right arrow.",
    "manifest_version": 2,
    "author": "Jonathan Ashurov",
    "icons": {
      "128": "dark_icon.png"
    },
    "commands": {
      "left" : {
          "suggested_key": {
               "default": "Ctrl+Shift+Left" 
          },
          "description": "Move tab left"
      },
      "right": {
          "suggested_key": {
              "default": "Ctrl+Shift+Right"
          },
          "description": "Move tab right"
      }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["toggleIcon.js"]
    }
  ]
}